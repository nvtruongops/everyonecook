# ============================================
# Everyone Cook - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=ap-southeast-1
AWS_ACCOUNT_ID=your-account-id
AWS_PROFILE=default

# ============================================
# Environment
# ============================================
ENVIRONMENT=dev
NODE_ENV=development

# ============================================
# Domain Configuration
# ============================================
DOMAIN_NAME=everyonecook.cloud
API_DOMAIN=api.everyonecook.cloud
CDN_DOMAIN=cdn.everyonecook.cloud
FRONTEND_URL=https://everyonecook.cloud
API_URL=https://api.everyonecook.cloud

# ============================================
# AWS Cognito
# ============================================
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id
COGNITO_REGION=us-east-1

# ============================================
# DynamoDB
# ============================================
DYNAMODB_TABLE_NAME=EveryoneCook-dev
DYNAMODB_ENDPOINT=https://dynamodb.us-east-1.amazonaws.com
DYNAMODB_REGION=us-east-1

# ============================================
# S3 Storage
# ============================================
S3_CONTENT_BUCKET=everyonecook-content-dev
S3_LOGS_BUCKET=everyonecook-logs-dev
S3_EMAILS_BUCKET=everyonecook-emails-dev
S3_CDN_LOGS_BUCKET=everyonecook-cdn-logs-dev
S3_REGION=us-east-1

# ============================================
# CloudFront
# ============================================
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your-key-pair-id
CLOUDFRONT_PRIVATE_KEY_PATH=./cloudfront-private-key.pem

# ============================================
# AWS Bedrock AI
# ============================================
# Claude 3 Haiku - fast and cost-effective for recipe generation
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_REGION=us-east-1
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# ============================================
# SQS Queues
# ============================================
SQS_AI_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account-id/everyonecook-ai-queue
SQS_IMAGE_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account-id/everyonecook-image-queue
SQS_ANALYTICS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account-id/everyonecook-analytics-queue
SQS_NOTIFICATION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account-id/everyonecook-notification-queue

# ============================================
# CloudWatch
# ============================================
CLOUDWATCH_LOG_GROUP=/aws/lambda/everyonecook
CLOUDWATCH_LOG_RETENTION_DAYS=7
CLOUDWATCH_METRICS_NAMESPACE=EveryoneCook

# ============================================
# API Gateway
# ============================================
API_GATEWAY_ID=your-api-gateway-id
API_GATEWAY_STAGE=v1
API_GATEWAY_THROTTLE_RATE=10000
API_GATEWAY_THROTTLE_BURST=5000

# ============================================
# Lambda Configuration
# ============================================
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=512
LAMBDA_RUNTIME=nodejs20.x

# ============================================
# WAF Configuration
# ============================================
WAF_WEB_ACL_ID=your-web-acl-id
WAF_RATE_LIMIT=2000

# ============================================
# Security
# ============================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=2592000
ENCRYPTION_KEY=your-encryption-key

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_AVATAR_UPLOAD=10
RATE_LIMIT_BACKGROUND_UPLOAD=10
RATE_LIMIT_AI_GENERATION=10
RATE_LIMIT_RECIPE_CREATION=20
RATE_LIMIT_POST_CREATION=20

# ============================================
# Cache Configuration
# ============================================
CACHE_AI_TTL=86400
CACHE_TRANSLATION_TTL=31536000
CACHE_CLOUDFRONT_TTL=86400

# ============================================
# Monitoring & Alerts
# ============================================
ALERT_EMAIL=everyonecookcloud@gmail.com
ALERT_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:account-id:everyonecook-alerts
COST_ALERT_THRESHOLD=50

# ============================================
# GitHub Integration
# ============================================
GITHUB_REPO=nvtruongops/everyonecook
GITHUB_BRANCH=main
GITHUB_TOKEN=your-github-token

# ============================================
# Amplify Hosting
# ============================================
AMPLIFY_APP_ID=your-amplify-app-id
AMPLIFY_BRANCH=main

# ============================================
# Development Tools
# ============================================
DEBUG=false
LOG_LEVEL=INFO
ENABLE_CORS=true
CORS_ORIGIN=https://everyonecook.cloud

# ============================================
# Testing
# ============================================
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test123!@#
TEST_MODE=false

# ============================================
# Feature Flags
# ============================================
FEATURE_AI_SUGGESTIONS=true
FEATURE_SOCIAL_FEED=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
